-- Opretter tabellen for tags
CREATE TABLE Tag (
    id INT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(50) NOT NULL
);

-- Opretter tabellen for turistattraktioner
CREATE TABLE TouristAttraction (
    id INT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(255) NOT NULL,
    description TEXT,
    city VARCHAR(100)
);

-- Opretter join-tabellen for mange-til-mange relationen
CREATE TABLE AttractionTag (
    attraction_id INT,
    tag_id INT,
    PRIMARY KEY (attraction_id, tag_id),
    FOREIGN KEY (attraction_id) REFERENCES TouristAttraction(id),
    FOREIGN KEY (tag_id) REFERENCES Tag(id)
);
